<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage"
    android:orientation="horizontal"
    android:background="@drawable/backgroundpage">


    <TextView
    android:layout_width="80dp"
    android:layout_height="35dp"
    android:text="Name:"
    android:textSize="25dp"
    android:textAllCaps="false"
    android:textStyle="bold"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    />

    <EditText
        android:id="@+id/user_nameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress" />


    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="phone:"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        />
    <EditText
        android:id="@+id/user_phoneId"
        android:layout_width="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:inputType="phone"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="Email:"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        />
    <EditText
        android:id="@+id/user_emailId"
        android:layout_width="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="addre:"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="220dp"
        />
    <EditText
        android:id="@+id/user_addressId"
        android:layout_width="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="220dp"
        android:layout_height="wrap_content"
        android:inputType="text"/>


    <TextView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Gender:"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="290dp"
        />
   <RadioGroup
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="300dp"
       android:layout_marginLeft="120dp"
       >

       <RadioButton
           android:id="@+id/user_male_genderId"
           android:checked="true"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="male" />
       <RadioButton
           android:id="@+id/user_female_genderId"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="female"
           />
       <RadioButton
           android:id="@+id/user_others_genderId"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="others"
           />
   </RadioGroup>


    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="User Type:"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="360dp"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="180dp"
       >

        <RadioButton
            android:id="@+id/admin_userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/user_userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            />

    </RadioGroup>

    <TextView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="User Picture"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        />
    <TextView
        android:id="@+id/get_imageId"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="420dp"
        android:text="Select image"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        />
    <EditText
        android:id="@+id/userId_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:hint="Enter Your NID/PID"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"/>
    <Button
        android:id="@+id/signUpId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="15dp"
        />
</RelativeLayout>